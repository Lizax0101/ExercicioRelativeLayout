<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/gradiente_criado"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OlÃ¡, nome e sobrenome" />

    <TextView
        android:id="@+id/textView_larn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="O que vamos aprender hoje?"
        android:textSize="22sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view_center"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/image_development"
        android:layout_width="128dp"
        android:layout_height="160dp"
        android:layout_below="@+id/textView_larn"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:layout_toStartOf="@+id/view_center"
        android:contentDescription="Desenvolvimento_Esquerda"
        android:src="@drawable/image_development" />

    <ImageView
        android:id="@+id/image_design"
        android:layout_width="128dp"
        android:layout_height="160dp"
        android:layout_below="@+id/textView_larn"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/view_center"
        android:contentDescription="Design"
        android:src="@drawable/image_design" />

    <ImageView
        android:id="@+id/icone_verde"
        android:layout_width="128dp"
        android:layout_height="160dp"
        android:layout_below="@+id/image_development"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:layout_toStartOf="@+id/view_center"
        android:contentDescription="verde_robo_Esquerda"
        android:src="@drawable/icone_verde" />

    <ImageView
        android:id="@+id/image_explore"
        android:layout_width="128dp"
        android:layout_height="160dp"
        android:layout_below="@+id/image_design"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@+id/view_center"
        android:contentDescription="Explorar"
        android:src="@drawable/image_explore" />

    <TextView
        android:id="@+id/textView_popular_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icone_verde"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:text="Cursos populares" />

    <TextView
        android:id="@+id/textView_see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icone_verde"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:text="Ver todos"
        android:textStyle="bold" />

    <View
        android:id="@+id/view_background"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/textView_popular_courses"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textView_texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view_background"
        android:layout_alignBottom="@+id/view_background"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="Desenvolvimento Android"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_android"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/view_background"
        android:layout_alignBottom="@+id/view_background"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_android"
        app:tint="@color/white"/>


</RelativeLayout>